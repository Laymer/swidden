{require_erts_vsn, "7.0"}.

{erl_opts, [{i, "src"},
            warnings_as_errors,
            warn_export_all,
            warn_unused_import]}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used,
               deprecated_function_calls, deprecated_functions]}.

{cover_enabled, true}.

{eunit_opts, [no_tty, {report, {eunit_progress, [colored, profile]}}]}.

{clean_files, [".test/*.beam", ".eunit/*", "ebin/*.beam"]}.

{validate_app_modules, true}.

{deps,
  [
   %% public
   {cowboy,
    ".*", {git, "git://github.com/ninenines/cowboy", "e25634c"}},

   {jsone,
    ".*", {git, "git://github.com/sile/jsone", {tag, "1.1.0"}}},

   {jesse,
    ".*", {git, "git://github.com/klarna/jesse", {tag, "1.1.5"}}},

   %% test
   {eunit_formatters,
    ".*", {git, "git://github.com/seancribbs/eunit_formatters", {branch, "master"}}},

   {hackney,
    ".*", {git, "git://github.com/benoitc/hackney", {tag, "1.3.2"}}}
  ]
}.
